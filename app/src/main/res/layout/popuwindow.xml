<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"

        android:id="@+id/layout_title">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="成都xxx加油站"
            android:textSize="30px"
            android:textColor="#333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="2px"
        android:background="#ff8c00"
        android:layout_below="@id/layout_title"></RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="2px"
        android:id="@+id/layout_car">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="车牌信息"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40px"
            android:id="@+id/tv_pop_car"
            android:text="川Axxxxxx"
            android:textSize="22px"
            android:textColor="#333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_car"
        android:id="@+id/layout_oil">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="加油型号"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40px"
            android:id="@+id/tv_pop_oil"
            android:text="#92"
            android:textSize="22px"
            android:textColor="#333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_oil"
        android:id="@+id/layout_money">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="加油金额"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40px"
            android:id="@+id/tv_pop_money"
            android:text="¥200"
            android:textSize="22px"
            android:textColor="#333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_money"
        android:id="@+id/layout_discount">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="优惠金额"
            android:textSize="28px"
            android:textColor="#fff"
            android:background="#ff8c00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40px"
            android:id="@+id/tv_pop_discount"
            android:text="-¥5.8"
            android:textSize="22px"
            android:textColor="#ff8c00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_discount"
        android:id="@+id/layout_payment">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="实际支付"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40px"
            android:id="@+id/tv_pop_payment"
            android:text="¥194.2"
            android:textSize="22px"
            android:textColor="#333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="88px"
        android:layout_below="@id/layout_payment"
        android:id="@+id/layout_btn"
        android:layout_marginTop="30px">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="40px"
            android:layout_marginStart="40px"
            android:text="确认预约"
            android:background="#000"
            android:textColor="#ff8c00"
            android:textSize="30px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="670px"
        android:layout_height="140px"
        android:layout_below="@id/layout_btn"
        android:layout_marginTop="50px"
        android:background="#0f000000">
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cancle"
            android:id="@+id/iv_cancel"/>

    </RelativeLayout>


</RelativeLayout>
